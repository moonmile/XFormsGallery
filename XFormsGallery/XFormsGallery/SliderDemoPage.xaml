<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="XFormsGallery.SliderDemoPage">
	<StackLayout>
		<Label Text="Slider" Font="50" HorizontalOptions="Center"></Label>
		<Slider Minimum="0" Maximum="100" 
			VerticalOptions="CenterAndExpand" />
		<Label x:Name="label" 
			Text="Slider value is 0" Font="Large" 
			HorizontalOptions="Center" VerticalOptions="CenterAndExpand"></Label>
	</StackLayout>						
</ContentPage>