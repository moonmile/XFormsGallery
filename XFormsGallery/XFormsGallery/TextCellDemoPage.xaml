<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="XFormsGallery.TextCellDemoPage">
	<StackLayout>
		<Label Text="TextCell" Font="50" HorizontalOptions="Center"></Label>
		<TableView Intent="Form">
			<TableView.Root>
				<TableRoot>
					<TableSection>
						<TextCell Text="This is a TextCell" Detail = "This is some detail text" />
					</TableSection>
				</TableRoot>
			</TableView.Root>
		</TableView>
	</StackLayout>						
</ContentPage>